{{!-- Reusable filter panel component --}}
{{!-- Usage: {{> filter-panel panelId="filterPanel" showAuthorFilter=false}} --}}
<div class="filter-panel" id="{{panelId}}" style="display: none;">
  <div class="filter-content">
    <div class="filter-group">
      <label class="filter-label">Time Range</label>
      <select id="{{panelId}}_timeFilter" class="filter-select">
        <option value="all">All Time</option>
        <option value="today">Today</option>
        <option value="week">This Week</option>
        <option value="month">This Month</option>
      </select>
    </div>
    <div class="filter-group">
      <label class="filter-label">Sort By</label>
      <select id="{{panelId}}_sortFilter" class="filter-select">
        <option value="newest">Newest First</option>
        <option value="oldest">Oldest First</option>
        {{#if showAuthorFilter}}
        <option value="author">By Author</option>
        {{/if}}
        <option value="title">By Title</option>
      </select>
    </div>
    {{#if showStatusFilter}}
    <div class="filter-group">
      <label class="filter-label">Status</label>
      <select id="{{panelId}}_statusFilter" class="filter-select">
        <option value="all">All Ideas</option>
        <option value="public">Public Only</option>
        <option value="private">Private Only</option>
      </select>
    </div>
    {{/if}}
    <div class="filter-actions">
      <button id="{{panelId}}_clearFilters" class="filter-clear-btn">Clear Filters</button>
      <button id="{{panelId}}_applyFilters" class="filter-apply-btn">Apply</button>
    </div>
  </div>
</div>